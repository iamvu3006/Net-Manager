@model MvcMovie.Models.Computer

@{
    ViewData["Title"] = "Thêm Máy Tính";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <!-- Card chứa Form -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-laptop"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Tên máy -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Tên máy</label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên máy" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Trạng thái -->
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">Trạng thái</label>
                            <select asp-for="Status" class="form-select">
                                <option value="">-- Chọn trạng thái --</option>
                                <option value="Free">Free</option>
                                <option value="Busy">Busy</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <!-- Đơn giá -->
                        <div class="mb-3">
                            <label asp-for="PricePerHour" class="form-label">Đơn giá (VNĐ/giờ)</label>
                            <div class="input-group">
                                <span class="input-group-text">₫</span>
                                <input asp-for="PricePerHour" class="form-control" placeholder="0" />
                            </div>
                            <span asp-validation-for="PricePerHour" class="text-danger"></span>
                        </div>

                        <!-- Nút hành động -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay về
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Lưu máy
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <!-- Validation scripts -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <!-- Bootstrap Icons -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}
