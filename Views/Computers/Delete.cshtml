@model MvcMovie.Models.Computer

@{
    ViewData["Title"] = "Xóa Máy Tính";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <!-- Card xác nhận xóa -->
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        @ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <p class="fs-5">Bạn có chắc chắn muốn xóa máy tính này?</p>
                    <dl class="row">
                        <dt class="col-sm-4">Tên máy:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsInUse)
                            {
                                <span class="badge bg-danger">Đang sử dụng</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Trống</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Đơn giá/giờ:</dt>
                        <dd class="col-sm-8">@String.Format("{0:N0}", Model.PricePerHour) VNĐ</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ComputerId" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Xóa
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons (nếu cần) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}
