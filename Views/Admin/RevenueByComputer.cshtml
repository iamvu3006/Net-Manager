@{
    ViewData["Title"] = "📊 Doanh thu theo máy";
    var data = ViewBag.RevenueData;
}

<h2 class="mb-4 text-primary">@ViewData["Title"]</h2>

<table class="table table-striped table-hover table-bordered shadow-sm">
    <thead class="table-dark">
        <tr class="text-center">
            <th scope="col">💻 Tên máy</th>
            <th scope="col">⏱️ Tổng thời gian sử dụng (giờ)</th>
            <th scope="col">💰 Tổng doanh thu (VNĐ)</th>
        </tr>
    </thead>
    <tbody>
        @if (data != null && data.Count > 0)
        {
            foreach (var item in data)
            {
                <tr class="text-center align-middle">
                    <td>@item.ComputerName</td>
                    <td>@Math.Round(item.TotalHours, 2)</td>
                    <td class="text-success fw-bold">@String.Format("{0:N0}", item.TotalRevenue)</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center text-muted">Không có dữ liệu thống kê.</td>
            </tr>
        }
    </tbody>
</table>
