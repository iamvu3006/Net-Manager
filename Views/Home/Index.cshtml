@{
    ViewData["Title"] = "Trang chính";
}

<!-- Hero Section -->
<section class="bg-light min-vh-100 d-flex align-items-center">
    <div class="container text-center">
        <h1 class="display-3 fw-bold mb-3 text-primary">Chào mừng đến với Tiệm Net!</h1>
        <p class="lead mb-4 text-secondary">Hãy trải nghiệm dịch vụ chơi game, học tập và giải trí chất lượng cao ngay hôm nay.</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg px-5 me-sm-3">
                🔑 Đăng nhập
            </a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg px-5">
                📝 Đăng ký
            </a>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4 text-center">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-speedometer2 display-4 text-primary mb-3"></i>
                        <h5 class="card-title fw-bold">Tốc độ cao</h5>
                        <p class="card-text text-muted">Máy tính cấu hình mạnh, đường truyền ổn định.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-clock-history display-4 text-primary mb-3"></i>
                        <h5 class="card-title fw-bold">Theo dõi thời gian</h5>
                        <p class="card-text text-muted">Tự giám sát thời gian sử dụng và chi phí realtime.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-wallet2 display-4 text-primary mb-3"></i>
                        <h5 class="card-title fw-bold">Tài khoản minh bạch</h5>
                        <p class="card-text text-muted">Nạp tiền và kiểm tra số dư dễ dàng, bảo mật.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}
