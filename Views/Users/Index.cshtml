@model IEnumerable<User>

@{
    ViewData["Title"] = "Danh sách người dùng";
}

<h1 class="mb-4">👤 Danh sách người dùng</h1>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-success">➕ Thêm người dùng</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Username)</th>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Phone)</th>
            <th>@Html.DisplayNameFor(model => model.Balance)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Username</td>
                <td>@item.FullName</td>
                <td>@item.Phone</td>
                <td>@String.Format("{0:N0}", item.Balance) đ</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-danger">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
